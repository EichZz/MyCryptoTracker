<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/black_shade_2"
    >

    <RelativeLayout
        android:id="@+id/idRLCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idTVSymbol"
        android:padding="3dp"
        android:text="SÃ­mbolo"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/idTVCurrencyRate"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTVCurrencyName"
            android:padding="3dp"
            android:text="Name"
            android:textColor="@color/white"
            android:layout_margin="2dp"
            android:layout_below="@+id/idTVSymbol"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Rate"
            android:textColor="@color/white"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/idTVCurrencyRate"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>